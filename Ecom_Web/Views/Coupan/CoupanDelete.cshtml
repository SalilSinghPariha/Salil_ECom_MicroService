@model CoupanDto
<form asp-action="CreateDelete">
    <br />  
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Coupon</h1>
        <input asp-for="CoupanId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Coupan Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CoupanCode" class="form-control" disabled />
                
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" disabled />
              
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">MinAmount </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" disabled/>
               
            </div>

            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control" asp-action="CoupanIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" asp-action="CoupanDelete" class="btn btn-success form-control btn-danger" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>
